<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <GridLayout
        android:id="@+id/gridLayoutBoardOpponent"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/opponentText"
        android:columnCount="6"
        android:rowCount="2" >

        <TextView
            android:layout_width="50dp"
            android:text="1"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:layout_width="50dp"
            android:text="2"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:layout_width="50dp"
            android:text="3"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:layout_width="50dp"
            android:text="4"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:layout_width="50dp"
            android:text="5"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:layout_width="50dp"
            android:text="Deck"
            android:textSize="20sp" />

        <TextView
            android:layout_width="50dp"
            android:text="7"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:layout_width="50dp"
            android:text="8"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:layout_width="50dp"
            android:text="9"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:layout_width="50dp"
            android:text="10"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:layout_width="50dp"
            android:text="11"
            android:textSize="40sp" 
            android:clickable="true"/>

        <TextView
            android:text="Graveyard"
            android:textSize="15sp" />
    </GridLayout>

    <TextView
        android:id="@+id/opponentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="30dp"
        android:textIsSelectable="false"
        android:textSize="15sp" >
    </TextView>

    <TextView
        android:id="@+id/playerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/opponentText"
        android:height="30dp"
        android:textIsSelectable="false"
        android:textSize="15sp" >
    </TextView>

    <Button
        android:id="@+id/endTurnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/playerText"
        android:text="@string/endturn" />

 

    <com.refnil.uqcard.view.SemiClosedSlidingDrawer
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res/com.refnil.uqcard"
        android:id="@+id/mySlidingDrawer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        custom:allowSingleTap="true"
        custom:content="@+id/contentGallery"
        custom:handle="@+id/handleButton"
        custom:orientation="vertical"
        custom:semiClosedContentSize="55dp"
        custom:topOffset="350dp" >

        <Button
            android:id="@id/handleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hand_button" />

        <LinearLayout
            android:id="@id/contentGallery"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#25587E"
            android:orientation="horizontal" >

            <Gallery
                android:id="@+id/Gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />
        </LinearLayout>
    </com.refnil.uqcard.view.SemiClosedSlidingDrawer>

    <GridLayout
        android:id="@+id/gridLayoutBoardPlayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gridLayoutBoardOpponent"
        android:layout_marginTop="70dp"
        android:columnCount="6"
        android:rowCount="2" >

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="1"
            android:textSize="40sp" />

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="2"
            android:textSize="40sp" />

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="3"
            android:textSize="40sp" />

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="4"
            android:textSize="40sp" />

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="5"
            android:textSize="40sp" />

        <TextView
            android:layout_width="50dp"
            android:text="Deck"
            android:textSize="20sp" />

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="7"
            android:textSize="40sp" />

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="8"
            android:textSize="40sp" />

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="9"
            android:textSize="40sp" />

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="10"
            android:textSize="40sp" />

        <TextView
            android:layout_width="50dp"
            android:clickable="true"
            android:text="11"
            android:textSize="40sp" />

        <TextView
            android:text="Graveyard"
            android:textSize="15sp" />
    </GridLayout>

</RelativeLayout>