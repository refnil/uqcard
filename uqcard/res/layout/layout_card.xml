
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/android3d" >

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF" >

            <EditText
                android:id="@+id/cost"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:gravity="right"
                android:text="4" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/cost"
                android:layout_weight="0.52"
                android:ems="10"
                android:text="BugDroid" >

                <requestFocus />
            </EditText>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/botLayout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#FFFFFF" >

            <EditText
                android:id="@+id/creaType"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:text="Android"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/atk"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:ems="10"
                android:text="Atk: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/flavor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/atk"
                android:layout_alignParentLeft="true"
                android:ems="10"
                android:text="La legende dit que ce robot aime manger des pommes -Steeve Job"
                android:textSize="13sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/def"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:gravity="right"
                android:text="Def: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/vie"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:ems="10"
                android:gravity="center"
                android:text="HP: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/creaType"
                android:ems="10"
                android:text="creature"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/flavor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/creaType"
                android:ems="10"
                android:gravity="top"
                android:text="creature description"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>
